@model Qualification
@{
    ViewData["Title"] = "DeleteQualification";
}

<div class="row">
    <div class="col-12">
        <div class="form-group row mb-1">
            <label asp-for="ApplicantId" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-6">
                @Model.Applicant.ApplicantName
            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Degree" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-6">
                @Model.Degree

            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Institute" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-6">
                @Model.Institute

            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="PassingYear" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-6">
                @Model.PassingYear

            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Result" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-6">
                @Model.Result

            </div>
        </div>
        <div class="form-group row mb-1">
            <div class="col-8">
                <form asp-action="Delete" asp-controller="Applicants" asp-route-id="@Model.QualificationId" method="post">

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger" name="act" value="insert">Confirm Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

